<p id="notice"><%= notice %></p>

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">EDIT</h1>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
            <div class="col-md-12">
              <div class="card mb-4 box-shadow">
                <div class="card-body">
                  <p class="card-text"><h2><%= @actor.first_name %>&nbsp;<%= @actor.last_name %></h2></p>
                  <p class="card-text">
                    <%= render 'form', actor: @actor %>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to 'Show', @actor, :class=>"btn btn-sm btn-outline-primary" %>
                      <%= link_to 'Back', actors_path, :class=>"btn btn-sm btn-outline-secondary" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
      </div>

    </div>
  </div>

</main>
